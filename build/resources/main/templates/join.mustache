<!doctype html>
<html lang="\">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
this is joinPage

<form id="joinForm" action="/join" method="post">
    <label for="memberId">아이디</label>
    <input type="text" name="memberId" id="memberId"><button id="idCheck">아이디 중복 체크</button>
    <br>
    <label for="memberPw">비밀번호</label>
    <input type="text" name="memberPw" id="memberPw">
    <br>
    <label for="memberName">이름</label>
    <input type="text" name="memberName" id="memberName">
    <br>
    <label for="memberGender">성별</label>
    <input type="text" name="memberGender" id="memberGender">
    <br>
    <label for="memberEmail">이메일</label>
    <input type="text" name="memberEmail" id="memberEmail">
    <br>
    <label for="memberAge">연령대</label>
    <input type="text" name="memberAge" id="memberAge">
    <br>
    <input type="submit" value="회원가입">
    <a href="/">뒤로가기</a>
</form>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>

        //회원 정보 전체 입력 확인
        $("#joinForm input[type='submit']").on("click",function(e){
            e.preventDefault();
            var inputArray = $("form input");
            var inputLength = inputArray.length-1;

            for(var i = 0 ; i<inputLength ; i++){
                //console.log(i);
                //console.log('0번째 val() 은 '+inputArray.eq(0).val());
                if(inputArray.eq(i).val() == ''){
                    console.log('입력필요');
                    alert('전부 기입해 주세요');
                    return false;
                }
            }
            $("#joinForm").submit();
        });

        // 아이디 중복 체크
        $("#idCheck").click(function(e){
            var memberId = $("#memberId").val();
            console.log(memberId);
            e.preventDefault();

            $.ajax({
                url:'/idCheck',
                type:'POST',
                data:memberId,
                contentType : "application/json; charset=UTF-8",
                success: function(data){
                    console.log(data);
                    if(data == '1'){
                        $("#idCheck").text("사용중인 아이디 입니다.");
                        $("#joinForm").find("input[type='submit']").attr("disabled",true);
                    }else{
                        $("#idCheck").text("사용 가능한 아이디 입니다.");
                        $("#joinForm").find("input[type='submit']").attr("disabled",false);
                    }
                },
                error:function(){
                    console.log("fail");
                }
            });
        });

</script>
</html>