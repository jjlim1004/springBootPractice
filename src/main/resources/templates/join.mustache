<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <form id="joinForm" action="/join" method="post">

                        <input type="text" class="form-control rounded-left" name="memberId" id="memberId" placeholder="아이디: 영문자+숫자 조합">
                        <br>
                        <button class="form-control btn btn-primary rounded submit px-3" id="idCheck">아이디 중복 체크</button>
                        <input type="hidden" name="id_chk" id="id_chk" value="">
                        <br><br>

                        <input type="password" class="form-control rounded-left" name="memberPw" id="memberPw" placeholder="비밀번호: 8자리 이상 영문자+숫자 조합">
                        <br>

                        <input type="text" class="form-control rounded-left" name="memberName" id="memberName"  placeholder="이름">
                        <br>

                        <div class="form-control rounded-left">성별&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                        <input type="radio" value="여" name="memberGender" id="female" checked> 여성
                        <input type="radio" value="남" name="memberGender" id="male"> 남성

                        </div>
                        <br>

                        <input type="text" class="form-control rounded-left" name="memberEmail" id="memberEmail" placeholder="이메일">
                        <br>

                        <input type="text" class="form-control rounded-left" name="memberAge" id="memberAge" placeholder="나이">
                        <br>

                        <input type="submit" class="form-control btn btn-primary rounded submit px-3" value="회원가입">
                        <br></br>
                        <a href="/" input type="" class="form-control btn btn-primary rounded submit px-3">뒤로가기</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
