<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">

                    <form id="modiForm" action="/memberUpdate" method="post">

                        <label for="memberId">아이디</label>
                        <input type="text" class="form-control rounded-left"  name="memberId" id="memberId" value={{member.memberId}} readonly>
                        <br>

                        <label for="memberPw">비밀번호</label>
                        <input type="password" class="form-control rounded-left" placeholder="수정할 비밀번호" name="memberPw" id="memberPw">
                        <br>

                        <label for="memberName">이름</label>
                        <input type="text" class="form-control rounded-left" name="memberName" id="memberName" value={{member.memberName}} readonly>
                        <br>

                        <label for="memberGender">성별</label>
                        <input type="text" class="form-control rounded-left" name="memberGender" id="memberGender" value={{member.memberGender}} readonly>
                        <br>

                        <label for="memberEmail">이메일</label>
                        <input type="text" class="form-control rounded-left" placeholder="수정할 이메일" name="memberEmail" id="memberEmail" value={{member.memberEmail}}>
                        <br>
                        <!--<label for="memberEmail">이메일</label>
        <input type="text" name="memberEmail" id="memberEmail" value={{member.memberEmail}}>-->

                        <label for="memberAge">나이</label>
                        <input type="text" class="form-control rounded-left" name="memberAge" id="memberAge" value={{member.memberAge}} readonly>
                        <br>

                        <input type="submit" class="form-control btn btn-primary rounded submit px-3" value="회원정보 저장">
                        <br></br>
                        <a href="/myPage" input type="" class="form-control btn btn-primary rounded submit px-3">뒤로가기</a>
                        <br></br>
                        <a href="/memberOut" input type="" class="form-control btn btn-primary rounded submit px-3">회원 탈퇴</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>

     $("#modiForm input[type='submit']").on("click",function(e){
          var form = document.getElementById("modiForm");

          var pwdChk = /^[a-zA-Z0-9]{8,15}$/;
          var emailChk = /^([0-9a-zA-Z_\.-]+)@([0-9a-zA-Z_-]+)(\.[0-9a-zA-Z_-]+){1,2}$/;

          var id = document.getElementById("memberId");
          var pwd = document.getElementById("memberPw");
          var email = document.getElementById("memberEmail");


             if(!pwd.value){
                alert("수정하실 비밀번호를 입력해 주세요");
                return false;
            }

             if(!pwdChk.test(pwd.value)){
                alert("비밀번호는 영문자와 숫자 조합으로 8~15자리 사용해야 합니다.");
                return false;
            }

            if(pwd.value==id.value){
                alert("Id와 Password가 동일합니다.");
                return false;
            }

              if(!email.value){
                alert("이메일을 입력해 주세요");
                return false;
            }

            if(!emailChk.test(email.value)){
                alert("올바른 이메일 형식이 아닙니다.");
                return false;
            }

            form.submit();
     });

</script>
</html>