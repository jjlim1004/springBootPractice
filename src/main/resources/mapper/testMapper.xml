<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.bootWeb.mapper.MemberMapper">

    <select id="get" parameterType="String" resultType="com.example.bootWeb.domain.Member">
        select * from member where member_id = #{memberId}
    </select>

    <insert id="insert" parameterType="com.example.bootWeb.domain.Member">
        <selectKey keyProperty="no" resultType="Long" order="BEFORE">
            SELECT member_seq.NEXTVAL FROM DUAL
        </selectKey>
        insert into member values(
            #{no},
            #{memberId},
            #{memberPw},
            #{memberName},
            #{memberGender},
            #{memberEmail},
            #{memberAge},
            user
        )
    </insert>
</mapper>

